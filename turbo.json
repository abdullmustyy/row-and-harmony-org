{
    "$schema": "https://turbo.build/schema.json",
    "tasks": {
        "build": {
            "env": ["SMTP_HOST", "SMTP_PORT", "SMTP_PASSWORD", "SMTP_USER"],
            "dependsOn": ["^build"],
            "inputs": ["$TURBO_DEFAULT$", ".env*"],
            "outputs": ["dist/**", ".next/**", "!.next/cache/**"]
        },
        "check-types": {
            "dependsOn": ["^check-types"]
        },
        "dev": {
            "persistent": true,
            "cache": false
        }
    }
}
