{
    "$schema": "https://turbo.build/schema.json",
    "tasks": {
        "build": {
            "env": ["SANITY_PROJECT_ID", "SANITY_DATASET", "SANITY_API_READ_TOKEN", "SANITY_API_WRITE_TOKEN"],
            "dependsOn": ["^build"],
            "inputs": ["$TURBO_DEFAULT$", ".env*"],
            "outputs": ["dist/**", ".next/**", "!.next/cache/**"]
        },
        "check-types": {
            "dependsOn": ["^check-types"]
        },
        "dev": {
            "persistent": true,
            "cache": false
        }
    }
}
